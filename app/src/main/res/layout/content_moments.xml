<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_moments" tools:context="android.apk.Moments">


    <LinearLayout android:id="@+id/linearLayoutVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView android:id="@+id/tvFirstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000000"
            android:textSize="15sp"
            /> <TextView android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Customer Details"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    <LinearLayout android:id="@+id/linearLayoutHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="225dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="-120dp"
        android:layout_below="@+id/linearLayoutVertical"
        android:background="#A4A4A4"
        android:orientation="vertical">
        <TextView android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Customer Name"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <TextView android:id="@+id/tvSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Surname"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <TextView android:id="@+id/tvIdentityMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identity Member"
            android:layout_marginTop="38dp"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <TextView android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="Phone Numbers"
            android:textColor="#000000"
            android:textSize="15sp"
            />
    </LinearLayout>
        <LinearLayout android:id="@+id/linearLayoutButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:layout_below="@+id/linearLayoutHorizontal"
            android:background="#A4A4A4"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff2f2f"
                android:text="CONTINUE"
                android:id="@+id/button3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff2f2f"
                android:text="CANCEL"
                android:id="@+id/button4" />
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayoutHorizontal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="191dp"
            android:layout_marginLeft="0dp"
            android:layout_below="@+id/linearLayoutButtons"
            android:background="#A4A4A4"
            android:orientation="horizontal">

            <TextView android:id="@+id/tvSecondsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#000000"
                android:textSize="15sp"
                /> <TextView android:id="@+id/tMoments2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Select Tupe of moments"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        </LinearLayout>

        <LinearLayout android:id="@+id/linearLayoutHorizontal3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="191dp"
            android:layout_marginLeft="0dp"
            android:layout_below="@+id/linearLayoutButtons"
            android:background="#A4A4A4"
            android:orientation="horizontal">

            <TextView android:id="@+id/tvThirdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#000000"
                android:textSize="15sp"
                /> <TextView android:id="@+id/tMoments3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Send Message"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
